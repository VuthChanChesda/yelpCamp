<% layout('layouts/boilerplate')  %>
<link rel="stylesheet" href="/css/star.css">

<div class="row my-3">
        <div class="col-md-6">
            <div class="card">
                <!-- Centered Image -->
                <img src="<%= camp.img %>" class="card-img-top img-fluid mx-auto d-block" alt="Camp Image">

                <!-- Card Body -->
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                </div>

                <!-- Full-Width List Items -->
                <ul class="list-group list-group-flush">
                    <li class="list-group-item w-100"><%= camp.location %></li>
                    <li class="list-group-item w-100  fw-bold">submited by <%= camp.author.username %></li>
                    <li class="list-group-item w-100">Price: <%= camp.price %>$</li>

                </ul>
                <% if(currentUser && camp.author.equals(currentUser._id)){ %>
                <div class="card-body">
                        <a href="/campground/<%= camp.id %>/edit" class="btn btn-primary">Edit Camp</a>
                        <form action="/campground/<%= camp.id %>?_method=DELETE" method="post" class="d-inline">
                            <button class="btn btn-danger mx-3">DELETE</button>
                        </form>
                </div>
                <% } %>
                
            </div>
        </div>
    <div class="col-md-6">
        <% if(currentUser){ %>
        <div>
            <h3>leave a review</h3>
            <form action="/campground/<%= camp.id %>/reviews" method="post" class="validated-form" novalidate>
                <div class="mb-3">
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="reviews[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="reviews[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="reviews[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="reviews[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="reviews[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="reviews[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div class="mb-3">
                    <label for="body">Review</label>
                    <textarea cols="30" rows="5" id="body" name="reviews[body]" class="form-control" required></textarea>
                </div>

                <button class="btn btn-success mb-3">submit </button>
            </form>
        </div>
        <%}%>
        
        <div>
            <% for(let r of camp.reviews){%>
                <div class="card mb-3  shadow">
                    <div class="card-body">
                        <p class="card-title text-info"><%= r.author.username %></p>
                        <p class="starability-result" data-rating="<%= r.rating  %>">
                            Rated: <%= r.rating %> stars
                        </p>
                        <p class="card-text"> <%= r.body%></p>
                    </div>
                    <% if(currentUser && r.author.equals(currentUser._id)){%>
                    <form action="/campground/<%=camp.id%>/reviews/<%=r.id%>?_method=DELETE" method="post">
                        <button class="btn btn-danger m-2">Delete</button>
                    </form>
                    <%}%>
                    
                </div>
            <%}%>
        </div>
        

    </div>
</div>




