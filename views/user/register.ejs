<% layout('layouts/boilerplate')  %>


<div class="container d-flex justify-content-center align-items-center mb-3">

    <div class="row w-100">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow" id="form-card">
               
                <div class="card-body">

                    <h2 class="card-title fw-bold">Welcome</h2>
                    <p class="card-text text-muted mb-4">Welcome back! please enter your details</p>

                    <form action="/register" method="post" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" aria-describedby="title" name="username" placeholder="enter your username" autofocus required>
                            <div class="valid-feedback">look good!</div>
                        </div>
            
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" aria-describedby="email" name="email" placeholder="enter your email" required>
                            <div class="valid-feedback">look good!</div>
                        </div>
                        <div class="mb-3">
                            <label for="password-with-check" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password-with-check" aria-describedby="password" name="password" placeholder="enter your password" required>
                            <div id="strength-indicator" class="card-text mt-2"></div>
                        </div>



                        <div class="d-flex justify-content-center mb-3">
                            <button type="submit" class="btn w-100 form-btn">Sign up</button>
                        </div>
            

                        <div class="d-flex justify-content-center" id="google-btn">
                            <button type="submit" class="btn w-100">
                                <img src="https://i.pinimg.com/736x/c8/b8/12/c8b8129127bada9fa699aeba388b3b2b.jpg" alt="Google Logo" width="20" height="20">
                                Sign up with Google
                            </button>
                        </div>

                        <div>
                            <p class="text-center mt-3">Have an account already? <a href="/login">Login</a></p>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>

</div>

<script src="/javascript/validatePassword.js"></script>







