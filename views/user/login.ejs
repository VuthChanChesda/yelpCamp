<% layout('layouts/boilerplate')  %>


<div class="container d-flex justify-content-center align-items-center mt-5 mb-4">

    <div class="row w-100">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow" id="form-card">
               
                <div class="card-body" id="form-card-login-register-body">

                    <h2 class="card-title fw-bold">Welcome back</h2>
                    <p class="card-text text-muted mb-4">Welcome back! please enter your details</p>
                    <form action="/login" method="post" class="validated-form" novalidate>
                        <div class="mb-4">
                            <label for="username" class="form-label fw-bold">Username</label>
                            <input type="text" class="form-control fw-light" id="username" aria-describedby="title" name="username" placeholder="enter your username" autofocus required>
                            <div class="valid-feedback">look good!</div>
                        </div>
            
                        <div class="mb-4">
                            <label for="password" class="form-label fw-bold">Password</label>
                            <input type="password" class="form-control fw-light" id="password" aria-describedby="password" name="password" placeholder="enter your password" required>
                            <div class="valid-feedback">look good!</div>
                        </div>

                        <div class="d-flex justify-content-center mb-3">
                            <button type="submit" class="btn w-100 form-btn">Login</button>
                        </div>

                        <div class="d-flex justify-content-center" id="google-btn">
                            <a type="submit" class="btn w-100 border-dark" href="/auth/google">
                                <img src="/images/googleIcon.png" alt="Google Logo" id="google-logo">
                                continue with Google
                            </a>
                        </div>

                        <div>
                            <p class="text-center mt-3">Don't have an account? <a href="/register">Register</a></p>
                        </div>
                   
                    </form>

                </div>

            </div>
        </div>
    </div>

</div>